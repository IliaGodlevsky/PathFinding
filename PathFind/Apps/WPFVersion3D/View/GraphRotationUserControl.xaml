<UserControl x:Class="WPFVersion3D.View.GraphRotationUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFVersion3D.View" 
             xmlns:viewmodel="clr-namespace:WPFVersion3D.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:GraphFieldRotationViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">

    <StackPanel Orientation="Vertical">
        <Separator Margin="5"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <TextBlock Margin="5" Text="Rotation speed: "/>
            <ComboBox Width="150" Margin="5" SelectedValue="{Binding SelectedRotationSpeed}" ItemsSource="{Binding AnimationSpeeds}" DisplayMemberPath="Item1" SelectedValuePath="Item2" SelectedIndex="0"/>
        </StackPanel>

        <local:GraphFieldRotatingUserControl DataContext="{Binding Path=XAxisRotationViewModel}"/>
        <local:GraphFieldRotatingUserControl DataContext="{Binding Path=YAxisRotationViewModel}"/>
        <local:GraphFieldRotatingUserControl DataContext="{Binding Path=ZAxisRotationViewModel}"/>
        
        <Separator Margin="5"/>
    </StackPanel>
</UserControl>
